import * as React from "react";
import { SharePointCaseService } from "../../common";
import { ICaseItem } from "../../models/ICaseItem";
import { ICaseStatusCount } from "../../models/ICaseStatusCount";

export interface IProps {
  caseSvc: SharePointCaseService;
  onSelectCase: (caseItemId: number) => void;
}

export interface IState {
  counts: ICaseStatusCount[];
  expanded: string | null;
  cases: { [status: string]: ICaseItem[] };
  paging: { [status: string]: string | undefined };
  loading: boolean;
  searchText?: string;
  submitDate?: string;
  searchMode?: boolean;
}

export default class CaseDashboard extends React.Component<IProps, IState> {
  state: IState = {
    counts: [],
    expanded: null,
    cases: {},
    paging: {},
    loading: false,
    searchText: undefined,
    submitDate: undefined
  };

  async componentDidMount() {
    const counts = await this.props.caseSvc.getCaseCounts();
    this.setState({ counts });
  }

  private toggleStatus = async (status: string) => {
    if (this.state.expanded === status) {
      this.setState({ expanded: null });
      return;
    }

    this.setState({ expanded: status });

    if (!this.state.searchMode && !this.state.cases[status]) {
      await this.loadCases(status);
    }
  };

  private loadCases = async (status: string) => {
    this.setState({ loading: true });

    const res = await this.props.caseSvc.getCasesByStatus(status);

    this.setState((prev) => ({
      cases: { ...prev.cases, [status]: res.items },
      paging: { ...prev.paging, [status]: res.next },
      loading: false
    }));
  };

  private loadMore = async (status: string) => {
    const next = this.state.paging[status];
    if (!next) return;

    const res = await this.props.caseSvc.getCasesByStatus(status, next);

    this.setState((prev) => ({
      cases: {
        ...prev.cases,
        [status]: [...prev.cases[status], ...res.items]
      },
      paging: { ...prev.paging, [status]: res.next }
    }));
  };

  search = async () => {
    this.setState({ loading: true, expanded: null, cases: {}, paging: {}, counts: [] });

    const items = await this.props.caseSvc.searchCases({
      text: this.state.searchText,
      fromDate: this.state.submitDate
    });

    if (!items || items.length === 0) {
      this.setState({ loading: false, counts: [] });
      return;
    }

    const grouped: { [status: string]: ICaseItem[] } = {};
    const counts: ICaseStatusCount[] = [];

    for (let i = 0; i < items.length; i++) {
      const s = this.normalizeSearch(items[i].status);
      if (!grouped[s]) {
        grouped[s] = [];
      }
      grouped[s].push(items[i]);
    }

    for (const s in grouped) {
      counts.push({
        status: s,
        count: grouped[s].length
      });
    }

    this.setState({ cases: grouped, counts: counts, loading: false, searchMode: true });
  };

  private normalizeSearch(status?: string): string {
    if (!status || status.trim()) {
      return "New";
    }

    return status;
  }

  render() {
    const { counts, expanded, cases } = this.state;

    return (
      <div>
        <h3>Case Inbox</h3>
        <div
          style={{
            display: "flex",
            gap: 8,
            marginBottom: 12,
            alignItems: "center"
          }}>
          <input
            type="text"
            placeholder="Civil ID or Case ID"
            value={this.state.searchText}
            onChange={(e) => this.setState({ searchText: e.target.value })}
            style={{
              padding: 8,
              width: 220,
              border: "1px solid #ccc",
              borderRadius: 3
            }}
          />

          <input
            type="date"
            value={this.state.submitDate}
            onChange={(e) => this.setState({ submitDate: e.target.value })}
            style={{
              padding: 8,
              border: "1px solid #ccc",
              borderRadius: 3
            }}
          />

          <button
            onClick={this.search}
            style={{
              padding: "8px 14px",
              background: "#0078d4",
              color: "#fff",
              border: "none",
              borderRadius: 3,
              fontWeight: 600
            }}>
            Search
          </button>
        </div>
        {!this.state.loading && this.state.counts.length === 0 && (
          <div
            style={{
              marginTop: 20,
              padding: 12,
              color: "#666",
              background: "#f9f9f9",
              border: "1px dashed #ccc",
              borderRadius: 4
            }}>
            No cases found for the given criteria.
          </div>
        )}

        {counts.map((c) => (
          <div key={c.status || "New"}>
            <div
              style={{
                cursor: "pointer",
                fontWeight: 600,
                padding: "6px 8px",
                background: "#f4f6f8",
                border: "1px solid #dd",
                borderRadius: 3,
                marginTop: 8
              }}
              onClick={() => this.toggleStatus(c.status)}>
              ▶<span style={{ color: "#666", fontSize: 12 }}>{c.status || "New"}</span>({c.count})
            </div>

            {expanded === c.status && (
              <div style={{ marginLeft: 20 }}>
                {(cases[c.status] || []).map((cs) => (
                  <div
                    key={cs.Id}
                    style={{
                      padding: "8px 10px",
                      borderBottom: "1px solid #eee",
                      background: "#fff",
                      borderRadius: 3,
                      marginTop: 4,
                      cursor: "pointer"
                    }}
                    onClick={() => this.props.onSelectCase(cs.Id)}>
                    <b>{cs.caseId}</b> – {cs.customerName}
                  </div>
                ))}

                {this.state.paging[c.status] && <button onClick={() => this.loadMore(c.status)}>Load more</button>}
              </div>
            )}
          </div>
        ))}
      </div>
    );
  }
}
