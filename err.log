  protected getPropertyPaneConfiguration(): IPropertyPaneConfiguration {
    return {
      pages: [
        {
          header: {
            description: strings.PropertyPaneDescription
          },
          groups: [
            {
              groupName: strings.BasicGroupName,
              groupFields: [
                PropertyPaneTextField("description", {
                  label: strings.DescriptionFieldLabel
                })
              ]
            }
          ]
        }
      ]
    };
  }

  private initializeNavigation(): void {

    const loadView = async (view: string) => {

      $("#bbsContentArea").html("");

      switch (view) {

        case "about":
          $(".bbs-top-strip").html("<h2>About</h2>");
          $("#bbsContentArea").html(`
            <div class="bbs-card">
              <div class="bbs-card-inner">
                <div class="bbs-card-left">
                  <h1 class="bbs-title">Boubyan Business School</h1>
                  <p>
                    Boubyan Business School comprises of five main educational and training schools
                    that aim to develop our employees’ skills and abilities in various banking areas,
                    while helping them acquire diverse skillsets.
                  </p>
                  <p>
                    The five main schools serve as an umbrella for a number of other specialized academies
                    focusing on all technical areas of the banking business to help accelerate digital and
                    technological transformation.
                  </p>
                  <div class="bbs-btn-wrapper">
                    <button class="bbs-primary-btn">Apply Now</button>
                  </div>
                </div>
                <div class="bbs-card-right">
                  <img src="/CDN/images/genrci%20banner.jpg" />
                </div>
              </div>
            </div>
          `);
          break;

        case "dashboard":
          $(".bbs-top-strip").html("<h2>Dashboard</h2>");
          break;

        case "learning":
          // $("<div id='learningGrid'/>")
          //   .appendTo("#bbsContentArea")
          //   .dxDataGrid({
          //     dataSource: this.getCoursesItems(),
          //     // reuse your grid config here
          //   });
          break;

        case "required":
          $(".bbs-top-strip").html("<h2>Required Actions</h2>");
          break;

        case "competencies":
          $(".bbs-top-strip").html("<h2>Competencies & Feedback</h2>");
          break;
      }
    };

    // $("#bbsMenu li").on("click", function () {
    //   $("#bbsMenu li").removeClass("active");
    //   $(this).addClass("active");

    //   const view = $(this).data("view");
    //   loadView(view);
    // });

    // $("#bbsMenu").on("click", "li", function (e) {

    //   const $li = $(this);

    //   // If clicking parent with submenu
    //   if ($li.hasClass("has-submenu")) {

    //     $li.toggleClass("open");

    //     e.stopPropagation();
    //     return;
    //   }

    //   // Normal navigation
    //   $("#bbsMenu li").removeClass("active");
    //   $li.addClass("active");

    //   const view = $li.data("view");
    //   loadView(view);
    // });

    // $("#bbsMenu").on("click", ".menu-item", function (e) {

    //   const $parentLi = $(this).closest(".has-submenu");
    //   $parentLi.toggleClass("open");

    //   e.stopPropagation();
    // });
    $("#bbsMenu").off("click"); // prevent duplicate binding if render called again

    $("#bbsMenu").on("click", (e) => {

      const $target = $(e.target as any);

      const $menuItem = $target.closest(".menu-item");
      if ($menuItem.length > 0) {
        const $parent = $menuItem.closest(".has-submenu");
        $parent.toggleClass("open");
        return;
      }

      const $subLi = $target.closest(".submenu li");
      if ($subLi.length > 0) {

        $("#bbsMenu li").removeClass("active");
        $(".submenu li").removeClass("sub-active");

        $subLi.addClass("sub-active");

        const view = $subLi.attr("data-view");
        if (view) { loadView(view); }

        return;
      }

      const $topLi = $target.closest("#bbsMenu > li").not(".has-submenu");
      if ($topLi.length > 0) {
        $("#bbsMenu li").removeClass("active");
        $(".submenu li").removeClass("sub-active");
        $(".has-submenu").removeClass("open");

        $topLi.addClass("active");

        const view2 = $topLi.attr("data-view");
        if (view2) { loadView(view2); }

        return;
      }
    });

    loadView("about");
  }
}



======================================

.bbs-layout {
  display: flex;
  min-height: calc(100vh - 120px);
  width: 100%;
  background: #f2f3f5;
}

.bbs-layout,
.bbs-layout * {
  font-family: "Segoe UI", Arial, sans-serif;
}

.bbs-left-panel {
  width: 280px;
  background: #f4f5f7;
  border-right: 1px solid #d9d9d9;
  min-height: 100%;
  box-shadow: 2px 0 4px rgba(0, 0, 0, 0.04);
  position: relative;
  z-index: 100;
}

.bbs-left-header {
  height: 50px;
  display: flex;
  align-items: center;
  padding: 0 20px 0 25px;
  font-size: 14px;
  font-weight: 600;
  border-bottom: 1px solid #dcdcdc;
}

.bbs-left-panel ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.bbs-left-panel li {
  position: relative;
  padding: 15px 20px 15px 45px;
  font-size: 14px;
  color: #4a4a4a;
  cursor: pointer;
  border-bottom: 1px solid #e5e5e5;
  transition: background 0.2s ease;
  display: flex;
  align-items: center;
  gap: 10px;
  white-space: nowrap;
}

.bbs-left-panel li:last-child {
  border-bottom: none;
}

.bbs-left-panel li:hover {
  background: #e9ecef;
}

.bbs-left-panel li.active {
  color: #c00000;
  font-weight: 600;
  background: #edf0f3;
  /* margin-right: -1px; */
}

.bbs-left-panel li.active::before {
  content: "";
  position: absolute;
  left: 8px;
  top: 10px;
  bottom: 10px;
  width: 2px;
  background: #c00000;
  border-radius: 2px;
}


.bbs-right-panel {
  flex: 1;
  /* background: #ffffff; */
  /* display: flex;
  flex-direction: column; */
  padding: 0 20px 18px 25px;
  background: #edf0f3;
}


.bbs-top-strip {
  height: 50px;
  display: flex;
  align-items: center;
  padding-left: 25px;
  border-bottom: 1px solid #e1e1e1;
  background: #edf0f3;
}


.bbs-content {
  padding: 30px 40px;
  background: #edf0f3;
}

.CanvasZone,
.CanvasSection,
.ControlZone {
  padding-left: 0 !important;
  padding-right: 0 !important;
  margin: 0 !important;
}

body,
.spPageChrome {
  background: #f2f3f5 !important;
}

.bbs-icon {
  width: 18px;
  display: flex;
  align-items: center;
}

.bbs-left-panel li.active svg {
  stroke: #c00000;
  fill: #c00000;
}

.bbs-left-panel li.active svg path,
.bbs-left-panel li.active svg circle,
.bbs-left-panel li.active svg rect,
.bbs-left-panel li.active svg polygon {
  stroke: #c00000;
  fill: #c00000;
}


/* Content wrapper */
.bbs-content {
  padding: 30px 40px;
  background: #edf0f3;
}

/* White card */
.bbs-card {
  background: #edf0f3;
  border: 1px solid #dcdcdc;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  padding: 40px;
}

.bbs-card-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 40px;
}

.bbs-card-left {
  flex: 0 0 60%;
}

.bbs-card-left p {
  font-size: 14px;
  line-height: 1.7;
  color: #555;
  margin-bottom: 15px;
}

.bbs-title {
  font-size: 28px;
  font-weight: 500;
  color: #222;
  margin-bottom: 20px;
}

.bbs-card-left p {
  font-size: 14px;
  line-height: 1.6;
  color: #555;
  margin-bottom: 15px;
}

.bbs-primary-btn {
  margin-top: 15px;
  background: #c00000;
  color: #ffffff;
  border: none;
  padding: 10px 25px;
  font-size: 14px;
  cursor: pointer;
  border-radius: 3px;
}

.bbs-primary-btn:hover {
  background: #a00000;
}

.bbs-card-right {
  flex: 0 0 40%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: right;
}

.bbs-card-right img {
  max-width: 420px;
  width: 100%;
  height: auto;
}

.bbs-btn-wrapper {
  display: flex;
  justify-content: flex-end;
  margin-top: 20px;
}

.bbs-primary-btn {
  background: #c00000;
  color: #ffffff;
  border: none;
  padding: 8px 22px;
  font-size: 13px;
  font-weight: 500;
  border-radius: 2px;
  cursor: pointer;
}

.bbs-primary-btn:hover {
  background: #a00000;
}

.has-submenu>.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
}

.submenu {
  list-style: none;
  padding: 0;
  margin: 0;
  background: #f0f2f4;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.2s ease;
}

.submenu li {
  padding: 12px 20px 12px 60px;
  font-size: 13px;
  color: #555;
  border-bottom: 1px solid #e5e5e5;
}

.submenu li:hover {
  background: #e6e9ed;
}

.has-submenu.open .submenu {
  max-height: 400px;
}

.submenu-arrow {
  font-size: 12px;
  transition: transform 0.2s ease;
}

.has-submenu.open .submenu-arrow {
  transform: rotate(90deg);
}

/* Submenu active item */
.submenu li.sub-active {
  background: #edf0f3;
  color: #c00000;
  font-weight: 600;
  position: relative;
}

/* Small red indicator for submenu (optional) */
.submenu li.sub-active::before {
  content: "";
  position: absolute;
  left: 18px;
  top: 10px;
  bottom: 10px;
  width: 2px;
  background: #c00000;
  border-radius: 2px;
}
