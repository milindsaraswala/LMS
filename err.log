export const DISPUTE_REASONS: Array<{ key: string; text: string }> = [
  { key: "", text: "-- Select --" },
  { key: "SERVICE_NOT_RECEIVED", text: "Service/Merchandise not Received" },
  { key: "REFUND_NOT_PROCESSED", text: "Refund not processed" },
  { key: "INCORRECT_AMOUNT", text: "Incorrect amount billed" },
  { key: "LATE_PRESENTMENT", text: "Late presentment (debited later than allowed)" },
  { key: "DUPLICATE", text: "Duplicate" },
  { key: "FRAUD", text: "Fraud / Unauthorized" },
  { key: "OTHER", text: "Other" }
];

const REASONS_REQUIRE_ATTACHMENT: { [k: string]: boolean } = {
  SERVICE_NOT_RECEIVED: true,
  REFUND_NOT_PROCESSED: true,
  INCORRECT_AMOUNT: true,
  LATE_PRESENTMENT: true,
  DUPLICATE: true
};

export const isAttachmentRequired = (reason?: string): boolean => {
  if (!reason) return false;
  return REASONS_REQUIRE_ATTACHMENT[reason] === true;
};
