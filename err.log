import * as React from "react";
import { SharePointCaseService } from "../../common";
import { ICaseItem } from "../../models/ICaseItem";
import { ICaseStatusCount } from "../../models/ICaseStatusCount";

export interface IProps {
  caseSvc: SharePointCaseService;
  onSelectCase: (caseItemId: number) => void;
}

export interface IState {
  counts: ICaseStatusCount[];
  expanded: string | null;
  cases: { [status: string]: ICaseItem[] };
  paging: { [status: string]: string | undefined };
  loading: boolean;
  searchText?: string;
  submitDate?: string;
}

export default class CaseDashboard extends React.Component<IProps, IState> {
  state: IState = {
    counts: [],
    expanded: null,
    cases: {},
    paging: {},
    loading: false,
    searchText: undefined,
    submitDate: undefined
  };

  async componentDidMount() {
    const counts = await this.props.caseSvc.getCaseCounts();
    this.setState({ counts });
  }

  private toggleStatus = async (status: string) => {
    if (this.state.expanded === status) {
      this.setState({ expanded: null });
      return;
    }

    this.setState({ expanded: status });

    if (!this.state.cases[status]) {
      await this.loadCases(status);
    }
  };

  private loadCases = async (status: string) => {
    this.setState({ loading: true });

    const res = await this.props.caseSvc.getCasesByStatus(status);

    this.setState((prev) => ({
      cases: { ...prev.cases, [status]: res.items },
      paging: { ...prev.paging, [status]: res.next },
      loading: false
    }));
  };

  private loadMore = async (status: string) => {
    const next = this.state.paging[status];
    if (!next) return;

    const res = await this.props.caseSvc.getCasesByStatus(status, next);

    this.setState((prev) => ({
      cases: {
        ...prev.cases,
        [status]: [...prev.cases[status], ...res.items]
      },
      paging: { ...prev.paging, [status]: res.next }
    }));
  };

  search = async () => {
    const cases = await this.props.caseSvc.searchCases({
      text: this.state.searchText,
      fromDate: this.state.submitDate
    });

    this.setState({ cases });
  };

  render() {
    const { counts, expanded, cases } = this.state;

    return (
      <div>
        <h3>Case Inbox</h3>
        <input type="text" placeholder="Civil ID or Case ID" value={this.state.searchText} onChange={(e) => this.setState({ searchText: e.target.value })} />
        <input type="date" value={this.state.submitDate} onChange={(e) => this.setState({ submitDate: e.target.value })} />

        {counts.map((c) => (
          <div key={c.status}>
            <div style={{ cursor: "pointer", fontWeight: 600 }} onClick={() => this.toggleStatus(c.status)}>
              ▶ {c.status} ({c.count})
            </div>

            {expanded === c.status && (
              <div style={{ marginLeft: 20 }}>
                {(cases[c.status] || []).map((cs) => (
                  <div
                    key={cs.Id}
                    style={{
                      padding: 6,
                      borderBottom: "1px solid #eee",
                      cursor: "pointer"
                    }}
                    onClick={() => this.props.onSelectCase(cs.Id)}>
                    <b>{cs.caseId}</b> – {cs.customerName}
                  </div>
                ))}

                {this.state.paging[c.status] && <button onClick={() => this.loadMore(c.status)}>Load more</button>}
              </div>
            )}
          </div>
        ))}
      </div>
    );
  }
}

